{
  "id": "com.flatpak",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "java",
  "finish-args": [
    "--share=network",
    "--socket=x11",
    "--socket=wayland"
  ],
  "modules": [
    {
      "name": "my-java-app",
      "filesystem": "simple",
      "build-commands": [
        "install -D files/composeApp-desktop.jar /app/composeApp-desktop.jar"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "files"
        }
      ]
    }
  ]
}
